[ui]
username = Takayuki KONDO <tkondou@gmail.com>
merge = kdiff3

[tortoisehg]
ui.language = ja
fontoutputlog = MS UI Gothic,11,-1,5,50,0,0,0,0,0
vdiff = winmergeu
shell = c:\console2\console.exe
editor = "C:\Program Files\sakura\sakura.exe"


[web]
allow_push = *
push_ssl = False


[extensions]
bookmarks =
color =
graphlog =
mq =
rebase =
svn=~/hgext/hgsubversion/hgsubversion
purge = 
win32mbcs = 
convert = 
record =
info =~/hgext/info.py
#wincolor = ~/hgext/wincolor/wincolor.py
###pager =
tpager = ~/hgext/tpager/tpager.py


[alias]
#_status = status
#st = ! $HG _status $($HG root) $HG_ARGS

# branch
b = branch
#bs = branches -a

# resolve
mark = resolve -m
unmark = resolve -u
conflicts = resolve -l
uselocal = resolve --tool internal:local
useother = resolve --tool internal:other

# push
nudge = push --rev .
#push = ! echo -e "\033[31m(use 'hg nudge' to push changesets)\033[m"

[pager]
attend = annotate, cat, diff, export, glog, help, log, qdiff, status, tip
hg16mode = yes

; full path to the executable
#pager = LESS='-FRSX' less
pager = C:\msysgit\msysgit\bin\less.exe -f -FRSX
#pager = C:\less-418-utf8-bin\less.exe -FRSX
#pager = "C:\Program Files\Gow\bin\less.exe" 
#pager = "C:\Program Files\GnuWin32\bin\less.exe"
#pager = lv 


[diff]
git = True

[color]
# valid modes are win32, ansi, auto, off
mode = auto

