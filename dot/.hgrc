[ui]
username = tkondou <tkondou@jeol.co.jp>
merge = kdiff3

[tortoisehg]
ui.language = ja
fontoutputlog = MS UI Gothic,11,-1,5,50,0,0,0,0,0
vdiff = winmergeu
shell = c:\console2\console.exe
editor = "C:\Program Files\sakura\sakura.exe"
issue.bugtraqparameters = http://redmine.jeol.co.jp/projects/project00058/issues.atom?key=602655233f3ddc8e6e62c855e12aabb6357a9f93


[web]
allow_push = *
push_ssl = False


[extensions]
bookmarks =
color =
graphlog =
mq =
pager =
rebase =
svn=~/hgrepo/hgsubversion/hgsubversion
purge = 
win32mbcs = 
convert = 

[alias]
#_status = status
#st = ! $HG _status $($HG root) $HG_ARGS

# branch
b = branch
#bs = branches -a

# resolve
mark = resolve -m
unmark = resolve -u
conflicts = resolve -l
uselocal = resolve --tool internal:local
useother = resolve --tool internal:other

# push
nudge = push --rev .
#push = ! echo -e "\033[31m(use 'hg nudge' to push changesets)\033[m"

[pager]
attend = annotate, cat, diff, export, glog, log, qdiff, help
pager = LESS='-FRSX' less

[diff]
git = True

[color]
# valid modes are win32, ansi, auto, off
mode = win32

