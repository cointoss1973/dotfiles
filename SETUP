#!/bin/bash

files=".bash_profile .bashrc .emacs .emacs.d .gitconfig .hgrc .inputrc .minttyrc .vimrc"
for src in $files
do
    dst=${src##*/}
    rm -f "$HOME/$dst"
    echo dotfiles/dot/$src "->" $HOME/$dst
    ln -s "$HOME/dotfiles/dot/$src" "$HOME/$dst"
done

echo "please log off or source ~/.bash_profile"
